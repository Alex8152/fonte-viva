<?xml version='1.0' encoding='utf-8'?>
<widget id="com.nobile.fonte_viva" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Fonte Viva</name>
    <description>
        Aplicativo de transmissão de streaming.
    </description>
    <author email="alexsandro@nobile.com" href="http://phonegap.com">
        Nóbile Designer
    </author>
    <preference name="phonegap-version" value="cli-6.3.0" />
    <content src="index.html" />
    <access origin="*"/>
	<icon platform="android" src="img/36.png" density="ldpi" width="36" height="36"/>
	<icon platform="android" src="img/48.png" density="mdpi" width="48" height="48"/>
	<icon platform="android" src="img/72.png" density="hdpi" width="72" height="72"/>
	<icon platform="android" src="img/96.png" density="xhdpi" width="96" height="96"/>
	<icon platform="android" src="img/144.png" density="xxhdpi" width="144" height="144"/>
	<icon platform="android" src="img/192.png" density="xxxhdpi" width="192" height="192"/>
    <plugin name="cordova-plugin-device" spec="~1.1.4" />
    <plugin name="cordova-plugin-media" spec="~2.4.1" />
    <plugin name="cordova-plugin-network-information" spec="~1.3.1" />
    <plugin name="cordova-plugin-whitelist" spec="~1.3.1" />
    <preference name="android-minSdkVersion" value="14"/>
    <preference name="android-targetSdkVersion" value="24"/>
    <preference name="android-installLocation" value="auto"/>
    <preference name="android-signed" value="true"/>
    <platform name="android">
    <preference name="Orientation" value="portrait"/></platform>
    <preference name="Fullscreen" value="true"/>
    <intelxdk:crosswalk version="19"/>
    <preference name="debuggable" value="false"/>
</widget>
